# Moodle LTI Configuration
MOODLE_CLIENT_ID=your_client_id_from_moodle
MOODLE_CLIENT_SECRET=your_client_secret_from_moodle
MOODLE_OIDC_DISCOVERY_URL=https://moodle.example.com/auth/oidc/.well-known/openid-configuration
MOODLE_LAUNCH_URL=https://moodle.example.com/

# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database (All-Inkl MySQL)
DB_HOST=your_all_inkl_mysql_host
DB_PORT=3306
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=your_database_name
DB_DIALECT=mysql

# Session & Security
SESSION_SECRET=your_super_secret_session_key_change_this_in_production
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CORS & Frontend
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.vercel.app

# Logging
LOG_LEVEL=info

# Optional: Sentry Error Tracking
SENTRY_DSN=

# Optional: Keep-Alive endpoint (for GitHub Actions)
HEALTH_CHECK_SECRET=optional_secret_for_health_endpoint
